[user]
  name = Vaz Allen
  email = vaz@tryptid.com
[core]
  editor = vim
[push]
  default = current
[merge]
  tool = vimdiff
  defaultToUpstream = true
[log]
  abbrevCommit = true
  decorate = short
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  dif = diff
  unstage = reset HEAD --
  l = log --pretty=oneline --abbrev-commit
  gl = log --pretty=oneline --graph --abbrev-commit
  glog = log --graph
  wc = whatchanged
  in = "!f(){ git whatchanged ..origin/$(git symbolic-ref HEAD 2>/dev/null | cut -d'/' -f 3); }; f"
  out = "!f(){ git whatchanged origin/$(git symbolic-ref HEAD 2>/dev/null | cut -d'/' -f 3)..; }; f"
  last = show HEAD
  up = merge --ff-only
  todo = grep -n TODO
  xxx = grep -n XXX
[color]
  ui = auto
